<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="editTextStyle">@style/RobotoEditTextStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--Style for No Toolbar-->
    <style name="AppThemeNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:textColor">@color/text_default</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>
</resources>